{
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "pihole/pihole"
      ],
      "matchBaseBranches": [
        "main"
      ],
      "matchManagers": [
        "dockerfile"
      ],
      "versioning": "loose",
      "postUpgradeTasks": {
        "commands": [
          "sed \"s|^version: .*$|version: $(echo {{{newVersion}}} | sed -rn 's/^0*([1-9][0-9]*|0)\\.0*([1-9][0-9]*|0)(?:\\.0*([1-9][0-9]*|0))?/\\1.\\2.\\3/p')|\" -i balena.yml"
        ],
        "fileFilters": [
          "balena.yml"
        ],
        "executionMode": "update"
      }
    }
  ]
}